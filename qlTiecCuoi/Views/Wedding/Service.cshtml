@model IEnumerable<qlTiecCuoi.Models.DIchVu>
@{
    ViewBag.Title = "dịch vụ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section bgTop {
    @Html.Partial("_BgTop")
}

<head>
    <link href="~/Content/Myfolder/css/my_css.css" rel="stylesheet" />
    <style>
        .card {
            text-align: center;
            margin-top: 20px;
            /*width: 250px;*/
            height: auto;
            padding: 10px;
            box-shadow: 0 4px 8px 0 rgba(0,0,0, 0.2);
            border-radius: 5px;
            transition: 0.3s;
        }

            .card:hover {
                box-shadow: 0 8px 16px 0 rgba(0,0,0, 0.2);
            }

        #name {
            font-weight: bold;
        }

        #price {
            display: inline !important;
            color: red;
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <h1 id="title">Dịch vụ</h1>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="card">
                        <div id="name">@Html.DisplayFor(Model => item.TenDichVu)</div>
                        <img src="~/Content/assets/images/trang-tri/@Url.Content(item.HinhAnh)" style=" margin:10px; width:300px; height:400px;" />
                        <b>Price: <i style="color:red;">@Html.DisplayFor(Model => item.DonGia)</i></b>
                        <a href="/ChonDichVu/AddtoList/@item.IDDichVu"><input type="submit" class="btn btn-primary" value="Thêm" style="width:120px; height:40px; margin:5px auto;" /></a>
                    </div>
                </div>
            }
        </div>
    </div>
    <br />
    <br />
</body>