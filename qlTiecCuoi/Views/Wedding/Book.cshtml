                                                    <option value="2">Sảnh Pure Diamond</option>
                                                    <option value="3">Sảnh Ruby</option>
                                                    <option value="4">Sảnh Sapphire</option>
                                                    <option value="5">Sảnh Amethyst</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <input type="date" name="ngay" id="ngay" class="form-control" />
                                            </div>
                                            <div class="form-group">
                                                <select name="ca" class="form-control">
