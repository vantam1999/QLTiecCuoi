                                    <div class="form-group">
                                        <label for="sdt">Điện Thoại: </label>
                                        <input type="text" name="sdt" id="sdt" />
                                    </div>
                                </div>
                                <div class="listMenu">
                                    <ol>
                                        <li>
                                            <a href="javascript:void(0)">Thực Đơn</a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0)">Dịch Vụ</a>
                                        </li>
                                        <li>
                                            <button type="submit" class="book__confirmed">Xác Nhận Đặt Tiệc</button>
                                        </li>
                                    </ol>
                                </div>
                            </div>

