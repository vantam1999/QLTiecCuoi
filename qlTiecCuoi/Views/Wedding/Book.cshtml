                                    <div>
                                        <img src="~/Content/assets/images/logo1.png" />
                                    </div>
                                    <div class="infoRestaurant__name">ANONYMOUS PALACES</div>
                                    <div class="cross"></div>
                                    <div>
                                        <button type="button" class="openMenu" id="openMenu">ĐẶT TIỆC</button>
                                    </div>
                                </div>
                                <div class="form__name--vc">
                                    <div class="form-group">
                                        <label for="TenChuRe">Tên Chú Rể: </label>
                                        <input type="text" name="TenChuRe" id="TenChuRe" />
                                    </div>
                                    <div class="form-group">
                                        <label for="TenCoDau">Tên Cô Dâu: </label>
                                        <input type="text" name="TenCoDau" id="TenCoDau" />
