@model IEnumerable<qlTiecCuoi.Models.MonAn>

@{ 
    double tongtien = 0;
}
<table class="table" style="text-align:center;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenMon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HinhAnh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GhiChu)
        </th>
    </tr>

@foreach (var item in Model) {
    tongtien += item.Gia;
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenMon)
        </td>
        <td>
            <img src="~/Content/assets/images/food/@Url.Content(item.HinhAnh)" style="width:100px; height:100px;" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GhiChu)
        </td>
    </tr>
}
    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td><b>Tổng tiền:</b> @tongtien</td>
    </tr>
</table>
